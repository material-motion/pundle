{
  "name": "pundle",
  "version": "0.0.0",
  "private": true,
  "description": "Pundle root repository",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/steelbrain/pundle.git"
  },
  "author": "steelbrain",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/steelbrain/pundle/issues"
  },
  "homepage": "https://github.com/steelbrain/pundle#readme",
  "dependencies": {
    "@babel/cli": "^7.0.0-beta.47",
    "@babel/core": "^7.0.0-beta.47",
    "@babel/preset-env": "^7.0.0-beta.47",
    "@babel/preset-flow": "^7.0.0-beta.47",
    "eslint-config-steelbrain": "^5.0.2",
    "flow-bin": "^0.71.0",
    "nodemon": "^1.17.3",
    "rimraf": "^2.6.2"
  },
  "scripts": {
    "build": "babel packages --delete-dir-on-start -D -d dist --config-file ./.babelrc --ignore packages/test-package/src",
    "watch": "yarn build -w",
    "dev": "nodemon -w 'packages/**/*.{js,json}' -d 0.2 -x node node_modules/--test-package--/lib",
    "postinstall": "yarn build && node scripts/install"
  },
  "engines": {
    "node": ">=6 <=10"
  },
  "workspaces": [
    "packages/*"
  ]
}
